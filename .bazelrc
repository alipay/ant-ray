# build config
build --compilation_mode=opt
build --action_env=PATH
build --action_env=PYTHON_BIN_PATH
build --action_env=BAZEL_USE_CPP_ONLY_TOOLCHAIN=1
build --incompatible_depset_is_not_iterable=false
