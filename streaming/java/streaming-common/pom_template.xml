<?xml version="1.0" encoding="UTF-8"?>
  {auto_gen_header}
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://maven.apache.org/POM/4.0.0"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>ray-streaming</artifactId>
    <groupId>io.ant-ray</groupId>
    <version>3.3-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>

  <artifactId>streaming-common</artifactId>
  <name>ray streaming common</name>
  <description>ray streaming common</description>

  <packaging>jar</packaging>

  <dependencies>
    {generated_bzl_deps}

    <dependency>
      <groupId>io.ant-ray</groupId>
      <artifactId>ray-runtime</artifactId>
      <version>${ray.version}</version>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>io.ant-ray</groupId>
      <artifactId>fury</artifactId>
      <version>0.6.4</version>
      <exclusions>
        <!-- arrow used netty version is conflict with tbase -->
        <exclusion>
          <groupId>io.netty</groupId>
          <artifactId>*</artifactId>
        </exclusion>
      </exclusions>
    </dependency>
    <!-- jars for configuration begin-->
    <dependency>
      <groupId>org.aeonbits.owner</groupId>
      <artifactId>owner</artifactId>
      <version>1.0.10.bugfix</version>
    </dependency>
    <!-- jars for configuration end-->
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>copy-dependencies-to-build</id>
            <phase>package</phase>
            <goals>
              <goal>copy-dependencies</goal>
            </goals>
            <configuration>
              <outputDirectory>${basedir}/../../build/java</outputDirectory>
              <overWriteReleases>false</overWriteReleases>
              <overWriteSnapshots>false</overWriteSnapshots>
              <overWriteIfNewer>true</overWriteIfNewer>
              <!-- exclude artifacts -->
              <excludeArtifactIds>asm</excludeArtifactIds>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
